@model dynamic

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EPMS Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow-lg rounded">
            <div class="card-body text-center">
                <h1 class="display-5 fw-bold">EPMS</h1>
                <h3 class="my-4">Welcome, Admin!</h3>

                <div class="d-grid gap-3 col-6 mx-auto">
                    <a class="btn btn-dark btn-lg" asp-controller="Employees" asp-action="Index">Manage Employees</a>
                    <a class="btn btn-dark btn-lg" asp-controller="Departments" asp-action="Index">Manage Departments</a>
                    <a class="btn btn-dark btn-lg" asp-controller="Projects" asp-action="Index">Manage Projects</a>
                    <a class="btn btn-dark btn-lg" asp-controller="ProjectAllocations" asp-action="Index">View Project Assignments</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
